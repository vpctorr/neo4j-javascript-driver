{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "downlevelIteration": true,
    "outDir": "lib",
    "allowJs": true,
    "isolatedModules": true,
  },
  "include": ["src/**/*.js", "types/**/*.ts"]
}
